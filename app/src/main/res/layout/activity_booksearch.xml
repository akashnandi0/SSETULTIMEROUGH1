<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/library11"
    tools:context="com.a2j.ssetultimerough.BOOKSEARCH">

    <TextView
        android:text="SELECT BRANCH"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="35px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:scrollbarSize="30px"
        android:id="@+id/spinner_dialouge"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/branch"
        android:layout_alignParentStart="true"
        android:spinnerMode="dialog" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="350dp"
        android:id="@+id/listview" />

    <Button
        android:text="SEARCH BOOK"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:id="@+id/searchbook"
        android:layout_alignTop="@+id/spinner_dialouge"
        android:layout_alignParentEnd="true"
        android:layout_height="35dp"
        android:onClick="showJSON"/>
</RelativeLayout>
